@page "/"
@using DeltaDo.Shared
@inject DeltaDo.Client.Services.LocalTodoService Todos

<h3>DeltaDo</h3>

@if (items is null)
{
    <p>Loading…</p>
}
else
{
    <ul>
        @foreach (var t in items)
        {
            <li>
                <input type="checkbox" checked="@t.IsDone" disabled />
                @t.Title
            </li>
        }
    </ul>
}

@code {
    private IEnumerable<TodoItem>? items;   // ✅ IEnumerable
    protected override async Task OnInitializedAsync()
        => items = await Todos.GetAllAsync();
}
